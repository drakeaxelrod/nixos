# Example secrets file structure
# Copy to secrets.yaml and encrypt with: sops secrets/secrets.yaml
#
# Usage in NixOS:
#   sops.secrets.tailscale-authkey = {
#     sopsFile = ./secrets/secrets.yaml;
#   };
#   Then reference: config.sops.secrets.tailscale-authkey.path

# Tailscale auth key (for unattended setup)
tailscale-authkey: tskey-auth-xxxxxxxxxxxxx

# Git credentials
git-email: your@email.com
git-signing-key: XXXXXXXX

# WiFi passwords (if needed)
wifi-home: your-wifi-password

# API keys
openai-api-key: sk-xxxxxxxxxxxxxxx
anthropic-api-key: sk-ant-xxxxxxx
